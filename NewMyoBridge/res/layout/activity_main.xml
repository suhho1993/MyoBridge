<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d2d2d"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dkmobile.newmyobridge.MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#2d2d2d"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/main_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Main Control"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/main_armstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:text=" " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="65dp" >

            <ImageView
                android:id="@+id/imageDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:src="@drawable/blue_outline_lh_double_tap" />

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/main_DT_btn"
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:background="#2d2d2d"
                android:onClick="onClick"
                android:text="APP Define" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="65dp" >

            <ImageView
                android:id="@+id/imageFST"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:src="@drawable/blue_outline_lh_fist" />

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/main_FST_btn"
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:background="#2d2d2d"
                android:onClick="onClick"
                android:text="APP NAME" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="65dp" >

            <ImageView
                android:id="@+id/imageWI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:src="@drawable/blue_outline_lh_wave_right" />

            <Space
                android:layout_width="25dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/main_WI_btn"
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:background="#2d2d2d"
                android:onClick="onClick"
                android:text="APP NAME" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="65dp" >

            <ImageView
                android:id="@+id/imageWO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:src="@drawable/blue_outline_lh_wave_left" />

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/main_WO_btn"
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:background="#2d2d2d"
                android:onClick="onClick"
                android:text="APP NAME" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="65dp" >

            <ImageView
                android:id="@+id/imageSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:src="@drawable/blue_outline_lh_spread_fingers" />

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/main_FS_btn"
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:background="#2d2d2d"
                android:onClick="onClick"
                android:text="APP NAME" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>